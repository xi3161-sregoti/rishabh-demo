{
  "operations": [
    {
      "conditions": [
        {
          "expr": "data.name == '01-aws-vpc'",
          "path": "/xlr8s/components/+name:01-aws-vpc:0"
        }
      ],
      "op": "replace",
      "src": "/xlr8s/components/+name:01-aws-vpc:0/outputs/vpc_id/value",
      "dst": "/vpc_id",
      "options": {
        "defaults": {
          "value": "random-id"
        },
        "template": {
          "value": "{{.Values}}",
          "format": "string"
        }
      }
    },
    {
      "conditions": [
        {
          "expr": "data.name == '01-aws-vpc'",
          "path": "/xlr8s/components/+name:01-aws-vpc:0"
        }
      ],
      "op": "replace",
      "src": "/xlr8s/components/+name:01-aws-vpc:0/outputs/public_subnets/value",
      "dst": "/subnet_ids",
      "options": {
        "defaults": {
          "value": [
            "random-id"
          ]
        },
        "template": {
          "value": "{{toYaml .Values | nindent 4}}",
          "format": "yaml"
        }
      }
    },
    {
      "conditions": [
        {
          "expr": "data.name == '02-aws-kms'",
          "path": "/xlr8s/components/+name:02-aws-kms:0"
        }
      ],
      "op": "replace",
      "src": "/xlr8s/components/+name:02-aws-kms:0/outputs/key_arn/value",
      "dst": "/kms_key_arn",
      "options": {
        "defaults": {
          "value": "random-kms-arn"
        },
        "template": {
          "value": "{{.Values}}",
          "format": "string"
        }
      }
    }
  ]
}